@model RutasCheck.Models.Parada

@{
     ViewData["Title"] = "Delete";
    ViewData["header-title-page"] = "Paradas";
    ViewData["header-sub-title-page"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class = "page-inner mt--5">
    <div class="card">
        <div class="card-body">
            <h3>¿Estás seguro que deseas eliminar?</h3>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreParada)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NombreParada)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Borrado)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Borrado)
                </dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdParada" />
                <a asp-action="Index" class="btn btn-primary">Cancelar</a>
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            </form>
        </div>
    </div>
</div>
