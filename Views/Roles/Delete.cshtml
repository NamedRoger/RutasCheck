@model RutasCheck.Models.Rol

@{
    ViewData["Title"] = "Delete";
    ViewData["header-title-page"] = "Roles";
    ViewData["header-sub-title-page"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="page-inner mt--5">
        <div class="card">
            <div class="card-body">
                <h3>¿Estás seguro que deseas eliminar?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdRol" />
                    <a class="btn btn-sm btn-primary" asp-action="Index">Cancelar</a>
                    <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                </form>
            </div>
        </div>
    </div>
