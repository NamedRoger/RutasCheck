@model IEnumerable<RutasCheck.Models.Rol>

@{
    ViewData["Title"] = "Index";
    ViewData["header-title-page"] = "Roles";
    ViewData["header-sub-title-page"] = "Listado de roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-inner mt--5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col"><a class="btn btn-sm btn-success " asp-action="Create">Agregar</a></div>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre)
                                    </th>
                                    
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>

                                        <td>
                                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.IdRol">Editar</a>
                                            <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.IdRol">Detalles</a>
                                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdRol">Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>