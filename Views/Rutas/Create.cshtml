@model RutasCheck.Models.Ruta

@{
    ViewData["Title"] = "Create";
    ViewData["header-title-page"] = "Rutas";
    ViewData["header-sub-title-page"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-inner mt--5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                     <form >
                        <div class="form-group">
                            <label for="">
                                Paradas: 
                                <span>
                                    <button class="btn btn-sm btn-success" type="button" id="btn-agregar-parada">
                                        Agregar
                                    </button>
                                </span>
                            </label>
                            <div id="contentParadas" class="d-flex flex-column">

                            </div>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>

                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/formRutas.js"></script>

}
